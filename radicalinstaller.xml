<?xml version="1.0" encoding="utf-8"?>
<extension version="3.*" type="plugin" method="upgrade" group="installer">
	<name>PLG_INSTALLER_RADICALINSTALLER</name>
	<author>Cymbal</author>
	<creationDate>01.06.2022</creationDate>
	<copyright>Delo-Design</copyright>
	<license>GNU General Public License version 3; see LICENSE.txt</license>
	<authorEmail>cymbal@delo-design.ru</authorEmail>
	<authorUrl>https://delo-design.ru</authorUrl>
	<version>1.3.1</version>
	<description>PLG_INSTALLER_RADICALINSTALLER_PLUGIN_XML_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_installer_radicalinstaller.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_installer_radicalinstaller.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_installer_radicalinstaller.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_installer_radicalinstaller.sys.ini</language>
	</languages>

	<media folder="media" destination="plg_installer_radicalinstaller">
		<folder>css</folder>
		<folder>img</folder>
		<folder>js</folder>
	</media>

	<updateservers>
		<server type="extension" priority="1" name="RadicalInstaller">
			https://radicalmart.ru/update?element=radicalinstaller
		</server>
	</updateservers>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/mysql.sql</file>
		</sql>
	</install>

	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall/mysql/mysql.sql</file>
		</sql>
	</uninstall>

	<files>
		<folder>language</folder>
		<folder>src</folder>
		<folder>sql</folder>
		<folder>tables</folder>
		<folder>tmpl</folder>
		<filename plugin="radicalinstaller">radicalinstaller.php</filename>
		<filename plugin="radicalinstaller">helper.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="apikey"
					   type="text"
					   label="PLG_INSTALLER_RADICALINSTALLER_API_KEY"
					   default=""/>
			</fieldset>
		</fields>
	</config>
</extension>
